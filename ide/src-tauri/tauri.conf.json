{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Granite IDE",
  "version": "0.1.0",
  "identifier": "com.example.granite.ide",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "core",
        "dialog",
        "fs",
        "clipboard",
        "store",
        "window-state"
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Granite IDE",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png"
    ]
  },
  "plugins": {
    "store": null,
    "window-state": null
  }
}
