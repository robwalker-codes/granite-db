{
  "$schema": "https://schema.tauri.app/config/capability.json",
  "identifier": "fs",
  "description": "Enable CSV exports by granting read/write access to user-selected files.",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}
